@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ShortenProject</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />

	<link rel="stylesheet" href="~/ShortenProject.styles.css" asp-append-version="true" />
</head>
<body class="bg-primary text-light">
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm text-light navbar-light @*bg-white*@ border-bottom box-shadow mb-3 @*bg-dark*@ bg-gradient">
			<div class="container-fluid">
@*				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
*@				@*<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>*@
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						@if(SignInManager.IsSignedIn(User)) {
                            <li class="nav-item">
								<a class="nav-link text-light" asp-controller="Home" asp-action="Links">Shortcuts <i class="fa-solid fa-table"></i></a>
                            </li>
                        }
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted rounded bg-gradient">
		<div class="container text-light">
			&copy; 2023 - ShortenProject
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
